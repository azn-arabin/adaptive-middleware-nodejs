{
  "name": "adaptive-middleware",
  "version": "1.0.0",
  "description": "Adaptive middleware for fault-tolerant microservices",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "pack:dev": "npm run build && npm pack && echo 'Package updated!'",
    "watch:pack": "npm run build && npm pack && nodemon --watch dist --ext tgz --exec 'npm run pack:dev'",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node dist/index.js"
  },
  "keywords": ["middleware", "fault-tolerance", "circuit-breaker", "retry", "fallback"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.11.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "eslint": "^9.31.0",
    "nodemon": "^3.1.10",
    "typescript": "^5.5.0"
  }
}
