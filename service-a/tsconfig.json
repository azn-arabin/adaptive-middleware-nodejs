{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "adaptive-middleware": ["./adaptive-middleware/dist/index"]
    }
  },
  "include": ["src/**/*", "adaptive-middleware/dist/**/*"],
  "exclude": ["node_modules", "dist"]
}
